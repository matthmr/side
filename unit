#!/usr/bin/sh
# Made by mH (https://www.github.com/matthmr)

# Simple unit test using a shell
# unit [script]

here=${BASH_SOURCE[0]}
here=$(dirname $here)
here=$(readlink -f $here)
PATH="$PATH:$here"

RUN='/home/mh/scripts/scripts.d/lib/sdread'

TESTS=()
TOTAL=${#TESTS[@]}

curr_test=1

echo \[ .. \] Starting unit test for $1

for flag in $(seq 0 $(($TOTAL-1))); do
	echo '------------------------------------------------'
	flag=${TESTS[$flag]}
	echo \[ .. \] Test [ $curr_test / $TOTAL ]: $RUN $flag
	$RUN $flag
	# echo \[ \*\* \] Expected: $(echo $EXPECTED)
	curr_test=$(($curr_test + 1))
	echo '------------------------------------------------'
done
